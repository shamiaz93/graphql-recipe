//get recipes
query getRecipes($userId: Int) {
    recipes(userId: $userId){
        id
        name
        author
        description
        ingredients
        method
        url
        userId
    }
}

{
  "userId": 1
}

//getrecipe
query getRecipeById($recipeId: Int!) {
    recipe(id: $recipeId) {
        id
        name
        author
        description
        ingredients
        method
        url
        userId
    }
}

{ 
    "recipeId": 1
}

//update recipe name
mutation updateRecipe($id: Int!, $name: String!, $description: String, $ingredients: [String], $method: [String], $url: String) {
  updateRecipe(id: $id, name: $name, description: $description, ingredients: $ingredients, method: $method, url: $url) {
        name
        author
        description
        ingredients
        method
        url
  }
}

{
  "id": 1,
  "name": "Christmas fruit cake"
}

//create recipe
mutation createRecipe($name: String!, $author: String, $description: String, $ingredients: [String], $method: [String], $url: String, $userId: Int!) {
  createRecipe(name: $name, author: $author, description: $description, ingredients: $ingredients, method: $method, url: $url, userId: $userId) {
        id
        name
        author
        description
        ingredients
        method
        url
        userId
  }
}

{
  "name": "Christmas Pie cake",
  "author": "John Doe",
  "description": "My Description",
  "ingredients": ["a","b"],
  "method": ["c", "d"],
  "url": "aaaa.com",
  "userId": 5
}

//share or share recipe name
mutation saveOrShareRecipe($recipeId: Int!, $userId: Int!) {
  saveOrShareRecipe(recipeId: $recipeId, userId: $userId) {
        id
        name
        author
        description
        ingredients
        method
        url
  }
}

{
  "recipeId": 1,
  "userId": 5
}