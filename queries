//get recipes
query getRecipes($author: String!) {
    recipes(author: $author){
        name
        author
        description
        method
        url
    }
}

{
  "author": "Good Food"
}

//getrecipe
query getSingleRecipe($recipeName: String!) {
    recipe(name: $recipeName) {
        name
        author
        description
        method
        url
    }
}

{ 
    "recipeName": "Simmer-&-stir Christmas cake"
}

//update recipe name
mutation updateRecipeName($id: Int!, $name: String!) {
  updateRecipeName(id: $id, name: $name) {
        name
        author
        description
        method
        url
  }
}

{
  "id": 1,
  "name": "JavaScript"
}

//create recipe
mutation createRecipe($name: String!, $author: String!, $description: String) {
  createRecipe(name: $name, author: $author, description: $description) {
        name
        author
        description
        method
        url
  }
}

{
  "name": "Christmas Pie cake",
  "author": "John Doe",
  "description": "My Description"
}